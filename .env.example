# Environment Configuration Template
# Copy this file to .env and fill in actual values
# Example: cp .env.example .env

# Server Configuration
# Port on which the Express.js server will listen
# Default: 3000
PORT=3000

# Database Configuration
# Database connection string (user-provided)
# Example: mongodb://localhost:27017/myapp or postgresql://user:pass@host:5432/db
DB=

# =============================================================================
# Security Configuration
# =============================================================================
# These environment variables configure the security middleware stack.
# Adjust these values based on your deployment environment requirements.

# Environment Mode
# Determines application behavior for development vs production
# Values: development, production, test
# Default: development
NODE_ENV=development

# CORS (Cross-Origin Resource Sharing) Configuration
# Comma-separated list of allowed origins for cross-origin requests
# Use '*' to allow all origins (not recommended for production)
# Example: http://localhost:3000,https://myapp.com
# Default: http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
# Protects against brute-force and denial-of-service attacks

# Rate limit time window in milliseconds
# Default: 900000 (15 minutes)
# Example: 60000 (1 minute), 300000 (5 minutes), 900000 (15 minutes)
RATE_LIMIT_WINDOW=900000

# Maximum number of requests allowed per window per IP address
# Default: 100
# Lower values provide stronger protection but may affect legitimate users
RATE_LIMIT_MAX=100

# HTTPS/TLS Configuration
# Enable HTTPS support with TLS certificates
# When enabled, server expects certificates in certs/ directory
# Values: true, false
# Default: false (use HTTP for development)
# Production: Set to true and configure valid TLS certificates
HTTPS_ENABLED=false
